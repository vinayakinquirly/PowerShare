<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView4"
                android:src="@drawable/ic_placeholder_page"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Digital Marketing"
                android:id="@+id/textView7"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 minutes ago"
                android:id="@+id/textView8"
                android:layout_gravity="center_vertical"
                android:paddingRight="15dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView5"
                android:src="@drawable/ic_placeholder_page"
                android:layout_gravity="center_vertical" />

        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="5"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collabration vallidation: awesome isin't it tha brand the artists &amp; generation Authenti"
            android:id="@+id/textView9"
            android:maxLines="2"
            android:maxLength="80"
            android:textColor="#000"
            android:layout_weight="1.5"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="REPLY"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textScaleX="1.1"
            android:textSize="15sp"
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/textView10"
            android:layout_marginLeft="7dp"
            android:layout_weight="3.5"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_button_powershare" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/post_type_twitter"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="35dp"
        android:gravity="center_vertical">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView7"
                android:src="@drawable/ic_placeholder_page"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favourite"
                android:id="@+id/textView11"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView8"
                android:src="@drawable/ic_placeholder_page"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retweet"
                android:id="@+id/textView12"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical" />

        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/post_type_facebook"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="35dp"
        android:gravity="center_vertical">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/image_like_fb"
                android:src="@drawable/ic_placeholder_page"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical" />

        </TableRow>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bebebe"/>

</LinearLayout>