<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.inquirly.powershare.fragment.PowerPostFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:id="@+id/power_post_list">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="3"
                        android:src="@drawable/ic_chevron_left_black_48dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight=".6"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_alignParentTop="true"
                        android:fillViewport="true"
                        android:measureAllChildren="false"
                        android:scrollbars="none" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/background_button_blue"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/background_button_blue"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/background_button_blue"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/background_button_blue"
                                android:layout_weight="1"
                                android:id="@+id/imageView3"
                                android:layout_marginLeft="5dp" />

                        </LinearLayout>

                    </HorizontalScrollView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="3"
                        android:src="@drawable/ic_chevron_right_black_36dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp" />/>

                </TableRow>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="What would you like to share?"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:paddingRight="5dp"
                    android:background="@color/white"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:text="New Text"
                    android:id="@+id/textView4"
                    android:background="#22000000" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:touchscreenBlocksFocus="false">

                    <ImageView android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="2.2"
                        android:src="@drawable/ic_drawables_picture_powershare"
                        android:padding="15dp" />
                    <View android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#22000000" />
                    <ImageView android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="2.2"
                        android:padding="15dp"
                        android:src="@drawable/ic_add_video" />
                    <View android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#22000000" />

                    <TableRow
                        android:id="@+id/table_inpireMe"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1.8"
                        android:paddingLeft="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:weightSum="3">

                        <ImageView android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:src="@drawable/ic_inspire_me_powershare" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Inspire Me"
                            android:id="@+id/textView5"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/accent_material_dark" />
                    </TableRow>

                </TableRow>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/background_total_reach"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/textView2"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Reach"
                    android:id="@+id/textView3"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_powershare"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_powershare_it_powershare" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POWERSHARE IT!"
                android:id="@+id/textView6"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#fff" />

        </TableRow>

    </LinearLayout>

</RelativeLayout>
