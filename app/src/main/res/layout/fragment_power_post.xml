<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.inquirly.powershare.fragment.PowerPostFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_mainPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:id="@+id/power_post_list">

                    <ImageView
                        android:id="@+id/move_channel_left"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="3"
                        android:src="@drawable/ic_chevron_left_black"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp" />

                    <HorizontalScrollView
                        android:id="@+id/post_horizontal_view"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight=".6"
                        android:adjustViewBounds="true"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_alignParentTop="true"
                        android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical">

                            <ImageView
                                android:id="@+id/channel_fb"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_facebook_unselected_powershare"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_ring"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="visible"/>

                            <ImageView
                                android:id="@+id/selected_fb"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_facebook_selected_powershare"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_selected_fb"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/channel_twitter"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_twitter_unselected_powershare"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_ring"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="visible"/>

                            <ImageView
                                android:id="@+id/selected_twitter"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_twitter_selected_powershare"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_selected_twitter"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/channel_message"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_drawer_messages"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_ring"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="visible"/>

                            <ImageView
                                android:id="@+id/selected_message"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_sms_selected_powershare"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_selected_sms"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/channel_email"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_email_unselected_powershare"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_ring"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/selected_email"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_email_selected_powershare"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_selected_email"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="gone"/>


                            <ImageView
                                android:id="@+id/channel_linkdn"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_linkedin_unselected_powershare"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_ring"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/selected_linkdn"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_linkedin_selected_powershare"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_selected_lin"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/channel_qr"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_qr_unselected_powershare"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_ring"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/selected_qr"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_qr_selected_powershare"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_selected_qr"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/channel_beacon"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_beacon_unselected_powershare"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_ring"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/selected_beacon"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_beacon_selected_powershare"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="15dp"
                                android:background="@drawable/background_channel_selected_beacon"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </HorizontalScrollView>

                    <ImageView
                        android:id="@+id/move_channel_right"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="3"
                        android:src="@drawable/ic_chevron_right_black"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp" />

                </TableRow>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="What would you like to share?"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:paddingRight="5dp"
                    android:background="@color/white"
                    android:paddingBottom="5dp" />

                <ImageView
                    android:background="#fff"
                    android:id="@+id/image_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_horizontal|center_vertical"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:text="New Text"
                    android:id="@+id/textView4"
                    android:background="#22000000" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:touchscreenBlocksFocus="false">

                    <ImageView
                        android:id="@+id/add_images"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="2.2"
                        android:src="@drawable/ic_drawables_picture_powershare"
                        android:padding="15dp" />

                    <View android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:background="#22000000" />

                    <ImageView android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="2.2"
                        android:padding="15dp"
                        android:id="@+id/addVideoPost"
                        android:src="@drawable/ic_add_video" />

                    <View android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:background="#22000000" />

                    <TableRow
                        android:id="@+id/table_inpireMe"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1.8"
                        android:paddingLeft="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:weightSum="3">

                        <ImageView android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:src="@drawable/ic_inspire_me_powershare" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Inspire Me"
                            android:id="@+id/textView5"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/accent_material_dark" />
                    </TableRow>

                </TableRow>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/background_total_reach"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/textView2"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Reach"
                    android:id="@+id/textView3"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

    <TableRow
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_powershare"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_powershare_it_powershare" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POWERSHARE IT!"
            android:id="@+id/textView6"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#fff" />

    </TableRow>

    <LinearLayout
        android:id="@+id/linear_post_load_photo_options_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:alpha="0.9"
        android:visibility="gone">
        <TextView
            android:id="@+id/txt_post_load_picture_gallery"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textScaleX="1.2"
            style="@style/label_small_secondary"
            android:text="@string/label_post_from_gallery"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_line_separator"
            style="@style/line_separator_grey"/>
        <TextView
            android:id="@+id/txt_post_load_picture_camera"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textScaleX="1.2"
            style="@style/label_small_secondary"
            android:text="@string/label_post_take_photo"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_line_separator"
            style="@style/line_separator_grey"/>
        <TextView
            android:id="@+id/txt_post_load_picture_remove"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/label_small_secondary"
            android:text="Remove Picture"
            android:gravity="center"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txt_post_load_picture_cancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textScaleX="1.2"
            style="@style/label_small_secondary"
            android:text="@string/label_post_cancel"
            android:gravity="center"/>
    </LinearLayout>

    <FrameLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_mainPost"/>

</RelativeLayout>
